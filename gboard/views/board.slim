doctype html
html
  head
    title Hello World
  body
    h1
      a href="/" ..
    ul
      - @board.threads.sort_by(&:posted).reverse.each do |thread|
        li
          a href="/t/#{thread.id}" #{thread.title} &mdash; #{thread.posted}
    form method="POST"
      input type="text" name="title"
      textarea name="contents"
      input type="submit"
