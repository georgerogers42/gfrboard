doctype html
html
  head
    title= "/b/#{@board.name}"
  body
    h1
      a href="/" Home
    h1 
      a href="/b/#{@board.name}"
        | /b/#{@board.name}
    ol
      - @board.threads.sort_by(&:posted).reverse.each do |thread|
        li
          a href="/t/#{thread.id}" #{thread.title} &mdash; #{thread.author} &mdash; #{thread.posted}
    form method="POST"
      div
        | Title
        input type="text" name="title"
      div
        | Author
        input type="text" name="author"
      div
        textarea rows=25 cols=80 name="contents"
      input type="submit"
